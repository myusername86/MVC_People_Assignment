@using MVC_People.Models.PeopleViewModel
@model PeopleViewModel

@{
    ViewData["Title"] = "People List";
}

<div class="container mt-4">
    <center><h1>People List</h1></center>

    <form method="get" asp-action="Index" class="mb-3">
        <br />
        <br />
        <div class="form-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="Search by name or city" value="@Model.search" />
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <br />
    <br />

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Create New Person</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model.People)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.City</td>
                    <td><a asp-action="Details" asp-route-id="@person.Id" class="btn btn-info btn-sm">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
